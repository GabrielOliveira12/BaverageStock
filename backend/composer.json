{
    "name": "beveragestock/backend",
    "description": "Backend API para sistema de controle de estoque de bebidas",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "mikecao/flight": "^3.0",
        "zircote/swagger-php": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true
    }
}
